<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Ogólne">

        <SwitchPreference
            android:defaultValue="1"
            android:key="greyOutFinishedLessons"
            android:summaryOff="Zakończone lekcje nie będą przyciemnione."
            android:summaryOn="Zakończone lekcje będą przyciemnione."
            android:title="Wyszarzaj zakończone lekcje" />

        <SwitchPreference
            android:defaultValue="1"
            android:key="showDividers"
            android:summaryOff="Dividery nie będą widoczne."
            android:summaryOn="Dividery będą widoczne."
            android:title="Pokaż granice tabeli" />

        <SwitchPreference
            android:key="useRelativeTabNames"
            android:summaryOff="Relatywne nazwy zakładek nie będą używane."
            android:summaryOn="Relatywne nazwy zakładek będą używane."
            android:title="Wczoraj, dzisiaj i jutro" />
        <SwitchPreference
            android:key="displayDates"
            android:title="Używaj dat zamiast dni tygodnia" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Zaawansowane">

        <SwitchPreference
            android:defaultValue="0"
            android:key="showNotifications"
            android:summaryOff="Powiadomienia nie będą pokazywane."
            android:summaryOn="Powiadomienia będą pokazywane."
            android:title="Pokaż powiadomienia" />
    </PreferenceCategory>
</PreferenceScreen>