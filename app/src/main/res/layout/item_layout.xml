<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/lessonNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:fontFamily="sans-serif"
                android:text="3."
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="38sp" />

        </RelativeLayout>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/lessonTeacher"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/space"
                android:gravity="center_vertical"
                android:text="Andrzej Długoszek"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/lessonSubject"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignBottom="@+id/space"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:text="Wychowanie fizyczne"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp" />

            <android.support.v7.widget.CardView
                android:layout_height="22dp"
                android:layout_width="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:id="@+id/eventBadge"
                android:layout_marginRight="8dp"
                android:visibility="gone"
                android:layout_above="@+id/space"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/eventIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ic_event_black_24dp"
                        android:tint="#555" />

                    <TextView
                        android:id="@+id/eventText"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:text="klasówka"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/eventIcon"
                        android:paddingRight="4dp"
                        android:gravity="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_height="22dp"
                android:layout_width="wrap_content"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:id="@+id/subBadge"
                android:layout_marginRight="8dp"
                android:visibility="visible"
                android:layout_above="@+id/space"
                android:layout_alignParentEnd="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/substitutionIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:padding="2dp"
                        app:srcCompat="@drawable/ic_swap_horiz_black_24dp"
                        android:tint="#555" />

                    <TextView
                        android:id="@+id/substitutionText"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:layout_weight="1"
                        android:text="zastępstwo"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/substitutionIcon"
                        android:paddingRight="4dp"
                        android:gravity="center" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout><!--<View--><!--android:layout_width="match_parent"--><!--android:layout_height="1px"--><!--android:background="@android:color/darker_gray" />-->
