<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nauczyciel" />

    <TextView
        android:id="@+id/details_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ktośtam jakiśtam"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Data" />

    <TextView
        android:id="@+id/details_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23 października 2016"
        android:textColor="?android:attr/textColorSecondary"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/details_godzina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Godzina" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8:45"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="normal|bold" />


        <TextView
            android:id="@+id/details_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/details_start_time"
            android:textStyle="normal|bold"
            android:text=" - 9:40" />
            <!--android:fontFamily="sans-serif-thin"-->

        <TextView
            android:id="@+id/details_lesson_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/details_end_time"
            android:paddingLeft="8dp"
            android:text="(2 lekcja)"
            android:textStyle="normal|bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/details_event_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:text="1 wydarzenie :"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Kategoria" />

        <TextView
            android:id="@+id/details_event_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:fontFamily="sans-serif"
            android:text="klasówka"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Opis" />

        <TextView
            android:id="@+id/details_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Przykładowy opis"
            android:textColor="?android:attr/textColorSecondary"
            android:textStyle="normal|bold" />
    </LinearLayout>

</LinearLayout>